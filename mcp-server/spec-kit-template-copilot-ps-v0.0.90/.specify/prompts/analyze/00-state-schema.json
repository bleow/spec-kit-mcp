{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Analysis Chain State Schema",
  "description": "State schema for analyze-project prompt chain",
  "type": "object",
  "required": ["chain_id", "stage", "timestamp"],
  "properties": {
    "chain_id": {
      "type": "string",
      "description": "Unique identifier for this analysis chain execution",
      "pattern": "^[a-f0-9]{8}$"
    },
    "stage": {
      "type": "string",
      "description": "Current stage in the chain",
      "enum": [
        "initialization",
        "scope_definition",
        "structure_analysis",
        "file_analysis",
        "full_application_analysis",
        "cross_cutting_analysis",
        "report_generation",
        "artifact_generation",
        "complete"
      ]
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp of current state",
      "format": "date-time"
    },
    "stages_complete": {
      "type": "array",
      "description": "List of completed stages",
      "items": {
        "type": "string"
      }
    },
    "agents_md": {
      "type": "object",
      "properties": {
        "loaded": {
          "type": "boolean"
        },
        "version": {
          "type": "string"
        },
        "path": {
          "type": "string"
        }
      }
    },
    "config": {
      "type": "object",
      "properties": {
        "enableCheckArtifactory": {
          "type": "boolean"
        },
        "osEnv": {
          "type": "string",
          "enum": ["auto", "windows", "unix"]
        }
      }
    },
    "guidelines": {
      "type": "array",
      "description": "List of loaded corporate guidelines",
      "items": {
        "type": "string"
      }
    },
    "project_path": {
      "type": "string",
      "description": "Path to the project being analyzed"
    },
    "analysis_scope": {
      "type": "string",
      "description": "Type of analysis being performed",
      "enum": ["A", "B"]
    },
    "concern_details": {
      "type": "object",
      "description": "Details for cross-cutting concern analysis (when scope is B)",
      "properties": {
        "type": {
          "type": "string"
        },
        "current": {
          "type": "string"
        },
        "target": {
          "type": "string"
        }
      }
    },
    "estimation": {
      "type": "object",
      "properties": {
        "total_files": {
          "type": "integer"
        },
        "categories": {
          "type": "object"
        },
        "estimated_minutes": {
          "type": "integer"
        }
      }
    },
    "tech_stack": {
      "type": "object",
      "properties": {
        "primary": {
          "type": "string"
        },
        "secondary": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "versions": {
          "type": "object"
        }
      }
    },
    "project_type": {
      "type": "string",
      "enum": ["monolith", "microservices", "modular_monolith", "library"]
    },
    "structure": {
      "type": "object",
      "properties": {
        "services": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "shared_libs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "entry_points": {
          "type": "object"
        }
      }
    },
    "manifest_generated": {
      "type": "boolean"
    },
    "manifest_path": {
      "type": "string"
    },
    "files_analyzed": {
      "type": "integer"
    },
    "patterns_found": {
      "type": "object"
    },
    "dependencies": {
      "type": "object",
      "properties": {
        "total": {
          "type": "integer"
        },
        "direct": {
          "type": "integer"
        },
        "outdated": {
          "type": "integer"
        },
        "vulnerable": {
          "type": "integer"
        },
        "critical_vulns": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "abstraction_level": {
      "type": "string",
      "enum": ["LOW", "MEDIUM", "HIGH"]
    },
    "migration_feasibility": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "migration_phases": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "report_generated": {
      "type": "boolean"
    },
    "report_path": {
      "type": "string"
    },
    "artifacts_generated": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
